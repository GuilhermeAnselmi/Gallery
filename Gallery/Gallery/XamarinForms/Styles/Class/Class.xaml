<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             Padding="20"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gallery.XamarinForms.Styles.Class.Class">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" Class="Radius">
                <Setter Property="CornerRadius" Value="30" />
                <Setter Property="Margin" Value="10" />
            </Style>

            <Style TargetType="Button" Class="Ok">
                <Setter Property="BackgroundColor" Value="#27AE60" />
            </Style>

            <Style TargetType="Button" Class="Not">
                <Setter Property="BackgroundColor" Value="#E74C3C" />
            </Style>

            <Style TargetType="Button" Class="Default">
                <Setter Property="TextColor" Value="White" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="StyleClass" />

            <Button Text="StyleClass 01" StyleClass="Default, Radius, Ok" />
            <Button Text="StyleClass 02" StyleClass="Default, Not" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>