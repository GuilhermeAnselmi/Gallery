<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gallery.XamarinForms.Controls.Box.Box">
    <ContentPage.Content>
        <StackLayout>
            <BoxView Color="Black" HorizontalOptions="Center" WidthRequest="100" HeightRequest="100" />

            <BoxView Color="Black" HorizontalOptions="Center" WidthRequest="50" HeightRequest="100" />

            <BoxView Color="Black" HorizontalOptions="Center" WidthRequest="1" HeightRequest="100" />

            <BoxView Color="Black" HorizontalOptions="Center" WidthRequest="100" HeightRequest="100" CornerRadius="10" />

            <BoxView Color="Black" HorizontalOptions="Center" WidthRequest="100" HeightRequest="100" CornerRadius="100" />

            <BoxView Color="Black" HorizontalOptions="Center" WidthRequest="30" HeightRequest="100" CornerRadius="50" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>