<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gallery.XamarinForms.Controls.Swt.Swt">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="IsToogle" />
            <Switch HorizontalOptions="Start" IsToggled="True" />

            <Label Text="OnColor, ThumbColor" />
            <Switch HorizontalOptions="Start" OnColor="Orange" ThumbColor="GreenYellow" />

            <Label Text="Toggled" />
            <Switch HorizontalOptions="Start" Toggled="Switch_Toggled" />
            <Label x:Name="lblInfo" Text="Desmarcado" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>