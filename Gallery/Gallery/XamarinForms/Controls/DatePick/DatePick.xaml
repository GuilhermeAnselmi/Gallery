<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gallery.XamarinForms.Controls.DatePick.DatePick">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Date, MaximumDate, MinimumDate" />
            <DatePicker TextColor="White" Date="10/23/2021" MaximumDate="12/25/2021" MinimumDate="08/25/2021" />

            <Label Text="Format" />
            <DatePicker TextColor="White" Format="yyyy/MM/dd" />

            <Label Text="Events" />
            <DatePicker TextColor="White" DateSelected="DatePicker_DateSelected" />
            <Label x:Name="lblInfo" Text="-" />

            <Label Text="" />
            <DatePicker TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>