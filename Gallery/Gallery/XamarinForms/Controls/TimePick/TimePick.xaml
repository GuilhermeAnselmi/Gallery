<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gallery.XamarinForms.Controls.TimePick.TimePick">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Time, Format" />
            <TimePicker Time="14:25" Format="mm:HH" />

            <Label Text="PropertyChanged (existe para todos os elementos, executa com qualquer mudança de propriedade)" />
            <TimePicker PropertyChanged="TimePicker_PropertyChanged" />

            <Label x:Name="lblInfo" Text="-" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>