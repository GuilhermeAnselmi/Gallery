<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gallery.XamarinForms.Layouts.Framing.Framing">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="40">
            <Frame HorizontalOptions="Center" CornerRadius="100" Padding="0" BorderColor="Black" IsClippedToBounds="True">
                <BoxView Color="Green" WidthRequest="150" HeightRequest="150" />
            </Frame>
            
            <Frame Padding="0" CornerRadius="10">
                <StackLayout BackgroundColor="AliceBlue">
                    <Label Text="Steven Spielberg" TextColor="Black" FontSize="24" Margin="20, 20, 20, 10" HorizontalOptions="Center" />
                    <BoxView HeightRequest="1" Color="LightGray" HorizontalOptions="Fill" />
                    <Label Text="Diretor de Filmes Famosos" TextColor="Gray" Margin="20, 10, 20, 20" />
                </StackLayout>
            </Frame>
            
            <Frame HasShadow="True" CornerRadius="20" BorderColor="Green">
                <Label Text="Welcome to Xamarin.Forms!"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand"
                    TextColor="Black"/>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>